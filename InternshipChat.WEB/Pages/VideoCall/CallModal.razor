<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Rounded.Call" Class="mr-3 mb-1"></MudIcon>
            Incoming call
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h5">@caller is trying to reach you</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Decline">Decline</MudButton>
        <MudButton Color="Color.Primary" OnClick="Accept">Accept</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string caller { get; set; } = string.Empty;

    private void Decline()
    {
        MudDialog.Cancel();
    }

    private void Accept()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
